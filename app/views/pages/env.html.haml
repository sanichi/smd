= render "meta_tags", d: t("pages.env")

%section
  .header
    %h3.d-inline= t("pages.env.title")
  .body
    %table{class: "table table-bordered table-sm"}
      %tbody
        %tr
          %th= "Host"
          %td= ENV["HOSTNAME"]
        %tr
          %th= "Ruby"
          %td= "#{RUBY_VERSION}-p#{RUBY_PATCHLEVEL}"
        %tr
          %th= "Gems"
          %td= ENV["GEM_HOME"]
        %tr
          %th= "Bundler"
          %td= ENV["BUNDLER_VERSION"]
        %tr
          %th= "Rails"
          %td= Rails::VERSION::STRING
        %tr
          %th= "Env"
          %td= ENV["RAILS_ENV"]
        %tr
          %th= "Postgres"
          %td= ActiveRecord::Base.connection.execute('select version();').values[0][0] rescue "oops"
        %tr
          %th= "User"
          %td= ENV["USER"]
        %tr
          %th= "Shell"
          %td= ENV["SHELL"]
        %tr
          %th= "Pwd"
          %td= ENV["PWD"]
        %tr
          %th= "Path"
          %td= ENV["PATH"].split(":")
        %tr
          %th= "Keys"
          %td= ENV.keys
